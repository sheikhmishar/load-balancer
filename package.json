{
  "name": "load-balancer",
  "version": "1.0.0",
  "description": "A simple load-balancer in node js",
  "keywords": [
    "proxy",
    "web",
    "http",
    "http proxy",
    "http load balancer",
    "load balancer",
    "load",
    "balancer",
    "distributed server",
    "ws",
    "websocket",
    "websocket proxy",
    "node",
    "nodejs"
  ],
  "author": {
    "name": "sheikhmishar",
    "email": "misharex.sezan@gmail.com"
  },
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "watch": "bash -c \"export DEBUG=* && nodemon\"",
    "watch:tracker": "bash -c \"export DEBUG=* && nodemon -V tracker\"",
    "watch:lb": "bash -c \"export DEBUG=* && nodemon -V load-balancer\"",
    "watch:debug": "set \"DEBUG=*\" && nodemon -e js,json -x \"node --inspect-brk load-balancer.js\""
  },
  "engines": {
    "node": "v12.16.1",
    "npm": "6.13.4"
  },
  "dependencies": {
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.6",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "mocha": "^8.1.3"
  },
  "optionalDependencies": {
    "@types/express": "^4.17.8",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.33"
  }
}
